
#include "Charmander.h"
#include "Sprite.h"
#include "Enemy.h"
#include "SDL/SDL.h"
#include <string>
Charmander::Charmander(string filename, int x, int y, int w, int h, int xV, int yV, int hea):Enemy(filename,x,y,w,h,xV,yV,hea)
{
	setClips();
}

void Charmander::move()
{
 if(ypos<550)
	ypos+=yVel;
else
	xpos+=xVel;

}

//shows the enemy on the screen
void Charmander::show(SDL_Surface * screen, int count)
{
	apply_surface(xpos,ypos,sprite,screen,&clips[count%6]);
}

void Charmander::setClips()
{
  //Clip range for the Charmander clips
sprites[0].x = 0;
  sprites[0].y = 0;
  sprites[0].w = 34;
  sprites[0].h = 32;

  sprites[1].x = 200;
  sprites[1].y = 0;
  sprites[1].w = 34;
  sprites[1].h = 32;

  sprites[2].x = 264;
  sprites[2].y = 0;
  sprites[2].w = 34;
  sprites[2].h = 32;

  sprites[3].x = 300;
  sprites[3].y = 0;
  sprites[3].w = 34;
  sprites[3].h = 32;

  sprites[4].x = 331;
  sprites[4].y = 0;
  sprites[4].w = 34;
  sprites[4].h = 32;

  sprites[5].x = 364;
  sprites[5].y = 0;
  sprites[5].w = 34;
  sprites[5].h = 32;

}



